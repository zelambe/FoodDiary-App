<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/modItemLayout"
              android:orientation="vertical"
              android:weightSum="100"
>


    <TextView
            android:text="Delete Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ModifyItem" android:textSize="24sp"
            android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:weightSum="100"
    >
        <TextView
                android:text="Food:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="50"
                android:textSize="18sp"/>
        <TextView
                android:text="Calories: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="50"/>
    </LinearLayout>
</LinearLayout>