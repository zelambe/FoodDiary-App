<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/calories_remaining"
            android:layout_width="222dp"
            android:layout_height="52dp"
            android:id="@+id/textView" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/foodList"
            app:layout_constraintEnd_toStartOf="@+id/CaloriesRemainingTextView" android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"/>
    <TextView
            android:layout_width="93dp"
            android:layout_height="38dp"
            android:id="@+id/CaloriesRemainingTextView" android:textSize="24sp"
            android:layout_marginLeft="42dp" android:layout_marginStart="42dp"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/foodList"/>
    <TextView
            android:text="@string/total_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/foodList"
            app:layout_constraintEnd_toStartOf="@+id/TotalCaloriesTextView" android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp" android:layout_marginBottom="124dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="83dp"
            android:layout_height="33dp"
            android:id="@+id/TotalCaloriesTextView"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="125dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp" android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/foodList"
            app:layout_constraintVertical_bias="0.0"
    />
    <ListView
            android:layout_width="371dp"
            android:layout_height="394dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="13dp" android:layout_marginStart="13dp" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="13dp" android:layout_marginRight="13dp" android:id="@+id/foodList"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="@string/add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addFoodItemButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp"/>
</android.support.constraint.ConstraintLayout>